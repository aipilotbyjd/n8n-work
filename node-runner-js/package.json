{
  "name": "@n8n-work/node-runner",
  "version": "0.1.0",
  "description": "N8N-Work Node Runner - Sandboxed execution environment for workflow nodes",
  "author": "N8N-Work Team",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "start:dev": "tsx watch src/main.ts",
    "start:debug": "tsx --inspect-brk src/main.ts",
    "lint": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "proto:gen": "cd ../proto-contracts && ./generate.ps1"
  },
  "dependencies": {
    "fastify": "^4.24.3",
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@fastify/env": "^4.2.0",
    "@fastify/autoload": "^5.8.0",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "amqplib": "^0.10.3",
    "redis": "^4.6.10",
    "vm2": "^3.9.19",
    "isolated-vm": "^4.7.2",
    "axios": "^1.6.2",
    "node-fetch": "^3.3.2",
    "@opentelemetry/api": "^1.7.0",
    "prom-client": "^15.0.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "uuid": "^9.0.1",
    "lodash": "^4.17.21",
    "cheerio": "^1.0.0-rc.12",
    "xml2js": "^0.6.2",
    "csv-parser": "^3.0.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/amqplib": "^0.10.4",
    "@types/uuid": "^9.0.7",
    "@types/lodash": "^4.14.202",
    "@types/xml2js": "^0.4.14",
    "@types/jsonwebtoken": "^9.0.5",
    "typescript": "^5.3.2",
    "tsx": "^4.6.0",
    "eslint": "^8.54.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "prettier": "^3.1.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "@bufbuild/protobuf": "^1.6.0",
    "@connectrpc/connect": "^1.2.0",
    "@connectrpc/connect-node": "^1.2.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "testMatch": ["**/__tests__/**/*.test.ts", "**/?(*.)+(spec|test).ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
