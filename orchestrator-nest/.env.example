# Application
NODE_ENV=development
PORT=3000
APP_NAME=n8n-work-orchestrator
APP_VERSION=0.1.0
CORS_ORIGIN=http://localhost:3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=n8nwork
DB_PASSWORD=n8nwork_dev
DB_DATABASE=n8nwork
DB_SSL=false
DB_SYNCHRONIZE=false
DB_LOGGING=false
DB_MIGRATIONS_RUN=true

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_KEY_PREFIX=n8nwork:

# Message Queue
RABBITMQ_URL=amqp://n8nwork:n8nwork_dev@localhost:5672
MQ_WORKFLOW_EXCHANGE=workflow.execute
MQ_EXECUTION_EXCHANGE=execution.step
MQ_EVENTS_EXCHANGE=run.event

# Security
JWT_SECRET=your-super-secret-jwt-key-32-chars-long
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12
ENCRYPTION_KEY=your-super-secret-encryption-key-32

# External Services  
ENGINE_GRPC_URL=localhost:50051
NODE_RUNNER_URL=http://localhost:3002
CLICKHOUSE_URL=http://localhost:8123
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=n8nwork
MINIO_SECRET_KEY=n8nwork_dev

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=n8n-work-orchestrator
OTEL_SERVICE_VERSION=0.1.0
OTEL_ENABLE_TRACING=true
OTEL_ENABLE_METRICS=true
OTEL_ENABLE_LOGS=true

# Feature Flags
FEATURE_WEBHOOKS=true
FEATURE_MARKETPLACE=false
FEATURE_BILLING=false
FEATURE_ADVANCED_AUTH=false
FEATURE_MULTI_TENANCY=true

# Limits
MAX_WORKFLOW_SIZE=1048576
MAX_EXECUTION_TIME=3600000
MAX_CONCURRENT_EXECUTIONS=100
MAX_RETRY_ATTEMPTS=5
